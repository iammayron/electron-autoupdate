{
    "name": "poc-autoupdate",
    "version": "1.0.0",
    "description": "Hello World!",
    "main": "src/index.js",
    "author": "Mayron Alves",
    "license": "MIT",
    "scripts": {
        "watch": "nodemon --exec electron .",
        "start": "electron .",
